root = true

[*] # 表示所有文件适用
charset = utf-8 # 设置文件字符集
indent_style = space # 缩进风格（tab | space）
indent_size = 2 # 缩进大小
end_of_line = lf # 控制换行类型（lf | cr | crlf）
trim_trailing_whitespace = true # 删除行尾空白
insert_final_newline = true # 适用于文件结尾处插入一个空行

[*.md] # 仅.md文件适用以下规则
max_line_length = off
trim_trailing_whitespace = false